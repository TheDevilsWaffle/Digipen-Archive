class Z_MusicController:ZilchComponent
{
    [Property]
    var PlayMusicUponInitialize:Boolean = Boolean(true);
    [Property]
    var Music:SoundCue = SoundCue.Find("SC_Music");
    
    /*//////////////////////////////////////////////////////////////////////////////////////////////////////
    //FUNCTION-Initialize
    //EXPLANATION-Initialize variables/functions for further use
    //////////////////////////////////////////////////////////////////////////////////////////////////////*/
    function Initialize(init:CogInitializer):Void
    {
        //if component PlayMusicUponInitialize is true
        if(this.PlayMusicUponInitialize)
        {
            //play the music selected
            this.Space.SoundSpace.PlayCue(this.Music);
        }
    }
}
