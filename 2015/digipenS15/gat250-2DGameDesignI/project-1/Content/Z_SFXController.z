class Z_SFXController:ZilchComponent
{
    
    /*//////////////////////////////////////////////////////////////////////////////////////////////////////
    //FUNCTION-Initialize
    //EXPLANATION-Initialize variables/functions so that we can use them
    //////////////////////////////////////////////////////////////////////////////////////////////////////*/
    function Initialize(init:CogInitializer)
    {
        
    }
    
    /*//////////////////////////////////////////////////////////////////////////////////////////////////////
    //FUNCTION-PlaySFX
    //EXPLANATION-Receives a string and then matches it to the correct sound to play.
    //////////////////////////////////////////////////////////////////////////////////////////////////////*/
    function PlaySFX(sound_:String):Void
    {
        //create variable to store sound
        var sound:SoundCue = null;
        
        //JUMP
        if(sound_ == "jump")
        {
            sound = SoundCue.Find("sfx_jump");
        }
        //DIG
        if(sound_ == "dig")
        {
            sound = SoundCue.Find("sfx_dig");
        }
        
        //play the sound
        this.Space.SoundSpace.PlayCue(sound);
    }
}
